  <odoo>
    <data>
  <!-- Vista del Cliente  -->
      <record model="ir.ui.view" id="cestacompra.cliente_tree">
        <field name="name">Cestacompra tree</field>
        <field name="model">cestacompra.cliente</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="apellido"/>
            <field name="email"/>
            <field name="telefono"/>
            <field name="direccion"/>
            <field name="fecha_nacimiento"/>
            <field name="activo"/>
            <field name="country_id"/>
          
          </tree>
        </field>
      </record>

      <!-- Vista form del cliente -->
      <record model="ir.ui.view" id="cestacompra.cliente_form">
        <field name="name">Cestacompra cliente form</field>
        <field name="model">cestacompra.cliente</field>
        <field name="arch" type="xml">
          <form>
            <sheet>
              <group>
                <field name="name"/>
            <field name="apellido"/>
            <field name="email"/>
            <field name="telefono"/>
            <field name="direccion"/>
            <field name="fecha_nacimiento"/>
            <field name="activo"/>
            <field name="cesta_ids"/>
            <field name="country_id"/>
          
              </group>
            </sheet>
          </form>
        </field>
      </record>

      <!-- Vista calendar del cliente -->
    <record model="ir.ui.view" id="cestacompra.cliente_calendar">
      <field name="name">Cestacompra cliente calendar</field>
      <field name="model">cestacompra.cliente</field>
      <field name="arch" type="xml">
        <calendar string="clietne" date_start="fecha_nacimiento" color="activo">
          <field name="name"/>
          <field name="country_id"/>
        </calendar>
      </field>
    </record>

    

      <!-- Action para cliente -->
      <record model="ir.actions.act_window" id="cestacompra.cliente_action_window">
        <field name="name">Cliente</field>
        <field name="res_model">cestacompra.cliente</field>
        <field name="view_mode">tree,form,calendar</field>
      </record>



  <!-- Vista del CestaCompra -->
<record model="ir.ui.view" id="cestacompra.cesta_compra_tree">
    <field name="name">CestaCompra tree</field>
    <field name="model">cestacompra.cesta_compra</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="cliente_id"/>
            <field name="fecha_creacion"/>
            <field name="estado"/>
            <field name="observaciones"/>
            <field name="linea_ids"/>
            <field name="total"/>
        </tree>
    </field>
</record>

<!-- vista de formulario de cesta-->
    <record model="ir.ui.view" id="cestacompra.cesta_compra_form">
    <field name="name">CestaCompra form</field>
    <field name="model">cestacompra.cesta_compra</field>
    <field name="arch" type="xml">
        <form string="Cesta de la compra">
            <header>
                <button name="action_confirmar"
                        type="object"
                        string="Confirmar"
                        class="btn-primary"/>
                <field name="estado" widget="statusbar"/>
            </header>

            <sheet>
                <group>
                    <field name="name"/>
                    <field name="cliente_id"/>
                </group>

                <field name="linea_ids">
                    <tree editable="bottom">
                        <field name="producto_id"/>
                        <field name="cantidad"/>
                        <field name="precio_unitario"/>
                        <field name="subtotal" readonly="1"/>
                    </tree>
                </field>

                <group>
                    <field name="total" readonly="1"/>
                </group>
            </sheet>
        </form>
    </field>
</record>



<!-- Action -->
<record model="ir.actions.act_window" id="cestacompra.cesta_compra_action_window">
    <field name="name">CestaCompra</field>
    <field name="res_model">cestacompra.cesta_compra</field>
    <field name="view_mode">tree,form</field>
</record>


